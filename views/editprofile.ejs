<!-- views/editProfile.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile</title>
    <link rel="stylesheet" href="/styles/editProfile.css">
    <style>
        /* public/styles/editProfile.css */
body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    margin: 0;
    padding: 0;
}

.container {
    width: 80%;
    max-width: 900px;
    margin: 2rem auto;
    padding: 2rem;
    background: #fff;
    box-shadow: 0 0 10px rgba(0,0,0,0.1);
    border-radius: 8px;
}

h1 {
    font-size: 2rem;
    margin-bottom: 1.5rem;
    text-align: center;
}

fieldset {
    border: 1px solid #ddd;
    border-radius: 4px;
    padding: 1rem;
    margin-bottom: 1.5rem;
}

legend {
    font-weight: bold;
    margin-bottom: 0.5rem;
}

label {
    display: block;
    margin: 0.5rem 0;
}

input[type="text"], textarea {
    width: 100%;
    padding: 0.5rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    box-sizing: border-box;
}

textarea {
    resize: vertical;
}

button {
    background-color: #007bff;
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    cursor: pointer;
    font-size: 1rem;
    display: block;
    width: 100%;
    margin-top: 1rem;
}

button:hover {
    background-color: #0056b3;
}

    </style>
</head>
<body>
    <div class="container">
        <h1>Edit Profile</h1>
        <form action="" method="POST">
            <!-- Bio Section -->
            <fieldset>
                <legend>Bio</legend>
                <label for="aboutMe">About Me:</label>
                <textarea id="aboutMe" name="aboutMe" rows="4" cols="50"><%= bio.aboutMe %></textarea>
                
                <label for="tagline">Tagline:</label>
                <input type="text" id="tagline" name="tagline" value='<%= bio.tagline %>'>
            </fieldset>

            <!-- Interests Section -->
            <fieldset>
                <legend>Interests</legend>
                <label for="interest1">Interest 1:</label>
                <input type="text" id="interest1" name="interest1" value='<%= interests.interest1 %>'>
                
                <label for="interest2">Interest 2:</label>
                <input type="text" id="interest2" name="interest2" value='<%= interests.interest2 %>'>
                
                <label for="interest3">Interest 3:</label>
                <input type="text" id="interest3" name="interest3" value='<%= interests.interest3 %>'>
            </fieldset>

            <!-- Education Section -->
            <fieldset>
                <legend>Education</legend>
                <label for="education">Education:</label>
                <input type="text" id="education" name="education" value='<%= education.education %>'>
                
                <label for="occupation">Occupation:</label>
                <input type="text" id="occupation" name="occupation" value='<%= education.occupation %>'>
            </fieldset>

            <!-- Addresses Section -->
            <fieldset>
                <legend>Address</legend>
                <label for="street">Street:</label>
                <input type="text" id="street" name="street" value='<%= addresses.street %>'>
                
                <label for="city">City:</label>
                <input type="text" id="city" name="city" value='<%= addresses.city %>'>
                
                <label for="state">State:</label>
                <input type="text" id="state" name="state" value='<%= addresses.state %>'>
                
                <label for="postalCode">Postal Code:</label>
                <input type="text" id="postalCode" name="postalCode" value='<%= addresses.postalCode %>'>
                
                <label for="country">Country:</label>
                <input type="text" id="country" name="country" value='<%= addresses.country %>'>
            </fieldset>

            <button type="submit">Save Changes</button>
        </form>
    </div>
</body>
</html>
